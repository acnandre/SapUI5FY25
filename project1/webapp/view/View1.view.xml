<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.acn.training.project1.controller.View1">
    <Page id="page" title="{i18n>title}">
    <content><sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" editable="true" id="Form1" layout="ResponsiveGridLayout">
            <sap.ui.layout.form:content><Label text="Name" id="Name"/>
                <Input width="75%" id="NameInp"/>
                <Label text="Street/No" id="StreetNoInp"/>
                <Input width="100%" id="StreetInp"/>
                <Input width="50%" id="NoInp"/>
                <Label text="ZIP Code/City" width="100%" id="ZIPCity"/>
                <Input xmlns="sap.m" id="ZIPInp" width="100%"/><Input xmlns="sap.m" id="CityInp" width="50%"/>
                <Label text="Country" width="100%" id="Country"/>
                <ComboBox xmlns="sap.m" id="CountryInp" maxWidth="150%">
                    <items>
                        <core:Item xmlns:core="sap.ui.core" key="item-1-key" text="England" id="item2"/>
                        <core:Item xmlns:core="sap.ui.core" key="item-2-key" text="Germany" id="item3"/>
                        <sap.ui.core:Item text="USA" id="item4"/>
                        <sap.ui.core:Item text="Philippines" id="item5"/>
                        </items>
                    
                </ComboBox>
                <sap.ui.layout.form:FormLayout id="layout0"/></sap.ui.layout.form:content>
        </sap.ui.layout.form:SimpleForm>
        <Toolbar width="100%" id="toolbar1">
            <content>
                <ToolbarSpacer id="spacer0"/>
                <sap.ui.commons:Button xmlns:sap.ui.commons="sap.ui.commons" text="Save" width="100px" id="SaveB" style="Accept"/>
                <sap.ui.commons:Button xmlns:sap.ui.commons="sap.ui.commons" text="Clear" width="100px" id="ClearB" style="Reject" press="onClearPress"/>
            </content>
        </Toolbar>
    </content>
    </Page>
</mvc:View>